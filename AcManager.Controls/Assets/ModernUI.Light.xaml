  <Color x:Key="AccentColor">#00BCD4</Color>
  <Color x:Key="ErrorColor">#BF360C</Color>

  <!-- Curves -->
  <Color x:Key="CarPowerColor">#A20025</Color>
  <Color x:Key="CarTorqueColor">#A2A200</Color>

  <!-- Favourites, rating -->
