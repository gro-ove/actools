  <!-- Text editor, syntax highlighting -->
  <SolidColorBrush x:Key="TextEditorBackground">#fafafa</SolidColorBrush>
  <SolidColorBrush x:Key="TextEditorForeground">#000000</SolidColorBrush>
  <SolidColorBrush x:Key="TextEditorLineNumbersForeground">#717171</SolidColorBrush>
  <s:String x:Key="TextEditorSyntaxIni"><![CDATA[
		<SyntaxDefinition name="INI" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
			<Color name="Section" foreground="#777722" />
			<Color name="Comment" foreground="#777777" />
			<RuleSet>
				<Span color="Comment" begin="//" />
				<Span color="Comment" begin=";" />
				<Span color="Section" >
					<Begin>[[]</Begin>
					<End>[]]</End>
				</Span>
				<Rule foreground="#AD7FA8">^\s*[\w-]+\s*(?==)</Rule>
				<Rule foreground="#8AE234">
					\b0[xX][0-9a-fA-F]+  # hex number
				|    \b
					(    \d+(\.[0-9]+)?   #number with optional floating point
					|    \.[0-9]+         #or just starting with floating point
					)
					([eE][+-]?[0-9]+)? # optional exponent
				</Rule>
			</RuleSet>
		</SyntaxDefinition>]]></s:String>

	<!-- About -->
	<s:String x:Key="Description">I recommend you to switch to a light car previews style with this theme.</s:String>
