        <DataTemplate DataType="{x:Type t:AcPlaceholderNew}">
          <mui:BbCodeBlock Text="{Binding DisplayName}" Mode="NothingButEmoji" Margin="10 2 2 2" FontSize="{DynamicResource SmallFontSize}"
              TextTrimming="CharacterEllipsis" HorizontalAlignment="Stretch" x:Name="PART_DisplayNameText" />
          <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding Enabled}" Value="False">
              <Setter Property="Foreground" Value="{DynamicResource WindowTextReadOnly}" TargetName="PART_DisplayNameText" />
            </DataTrigger>
          </DataTemplate.Triggers>
        </DataTemplate>

        <!-- AcObjectNew -->
        <DataTemplate DataType="{x:Type t:AcObjectNew}">
          <DockPanel x:Name="PART_Panel" HorizontalAlignment="Stretch" mui:Draggable.Enabled="True" Background="Transparent">
            <Ellipse Width="4" Height="4" VerticalAlignment="Center" HorizontalAlignment="Right" Fill="{DynamicResource Go}" Margin="0 0 4 0"
                IsHitTestVisible="False" x:Name="PART_NewIcon" DockPanel.Dock="Right" Visibility="Collapsed" />
            <Path Data="{StaticResource BookmarkIconData}" Width="12" Height="12" DockPanel.Dock="Right" Fill="{DynamicResource FavouriteBrush}"
                Stretch="Uniform" Visibility="Collapsed" x:Name="PART_FavouriteIcon" VerticalAlignment="Center" Margin="0 0 4 0" />
            <c:RatingBar DockPanel.Dock="Right" Rating="{Binding Rating}" x:Name="PART_RatingIcon" VerticalAlignment="Center" Margin="0 0 4 0"
                Style="{StaticResource CompactRatingBar.ReadOnly}" />

            <mui:BbCodeBlock Text="{Binding DisplayName}" Mode="NothingButEmoji" Margin="10 2 4 2" FontSize="{DynamicResource SmallFontSize}"
                TextTrimming="CharacterEllipsis" HorizontalAlignment="Stretch" x:Name="PART_DisplayNameText" />
          </DockPanel>
          <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding Enabled}" Value="False">
              <Setter Property="Foreground" Value="{DynamicResource WindowTextReadOnly}" TargetName="PART_DisplayNameText" />
            </DataTrigger>
            <DataTrigger Binding="{Binding IsFavourite}" Value="True">
              <Setter Property="Visibility" Value="Visible" TargetName="PART_FavouriteIcon" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Rating}" Value="{x:Null}">
              <Setter Property="Visibility" Value="Collapsed" TargetName="PART_RatingIcon" />
            </DataTrigger>
            <DataTrigger Binding="{Binding ActualWidth, ElementName=PART_Panel, Converter={StaticResource LessToBooleanConverter}, ConverterParameter=240}"
                Value="False">
              <Setter Property="Visibility" Value="Collapsed" TargetName="PART_RatingIcon" />
            </DataTrigger>
            <DataTrigger Binding="{Binding IsNew}" Value="True">
              <Setter Property="Visibility" Value="Visible" TargetName="PART_NewIcon" />
            </DataTrigger>
          </DataTemplate.Triggers>
        </DataTemplate>

        <!-- AcCommonObject -->
        <DataTemplate DataType="{x:Type t:AcCommonObject}">
          <mui:Cell x:Name="PART_Panel" mui:Draggable.Enabled="True" Background="Black" ClipToBounds="True">
            <Border Background="{DynamicResource CardBackground}" VerticalAlignment="Stretch">
              <TextBlock Style="{StaticResource Heading1}" Text="No preview" Foreground="{DynamicResource CardHeaderTextDisabled}" HorizontalAlignment="Center"
                  VerticalAlignment="Center" Margin="0 0 0 20" />
            </Border>
            <DockPanel Background="{DynamicResource DarkStripeBackground}" VerticalAlignment="Bottom">
              <mui:BbCodeBlock x:Name="PART_DisplayNameText" Padding="0 2 8 2" Text="{Binding DisplayName}" Mode="NothingButEmoji"
                  Foreground="{DynamicResource DarkStripeText}" TextTrimming="CharacterEllipsis" Style="{StaticResource Small}" FontWeight="Normal" />
            </DockPanel>
            <DockPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 4 0 0">
              <Path Data="{StaticResource AlertIconData}" Width="16" Height="16" DockPanel.Dock="Right" Fill="{DynamicResource Error}" Stretch="Uniform"
                  Visibility="Collapsed" x:Name="PART_ErrorIcon" />
              <Ellipse Width="4" Height="4" VerticalAlignment="Center" HorizontalAlignment="Right" Fill="{DynamicResource Go}" Margin="0 0 4 0"
                  IsHitTestVisible="False" x:Name="PART_NewIcon" DockPanel.Dock="Right" Visibility="Collapsed" />
              <Path Data="{StaticResource BookmarkIconData}" Width="12" Height="12" DockPanel.Dock="Right" Fill="{DynamicResource FavouriteBrush}"
                  Stretch="Uniform" Visibility="Collapsed" x:Name="PART_FavouriteIcon" VerticalAlignment="Center" Margin="0 0 4 0" />
              <c:RatingBar DockPanel.Dock="Right" Rating="{Binding Rating}" x:Name="PART_RatingIcon" VerticalAlignment="Center" Margin="0 0 4 0"
                  Style="{StaticResource CompactRatingBar.ReadOnly}" />
            </DockPanel>
          </mui:Cell>
          <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding Enabled}" Value="False">
              <Setter Property="Foreground" Value="{DynamicResource WindowTextReadOnly}" TargetName="PART_DisplayNameText" />
            </DataTrigger>
            <DataTrigger Binding="{Binding HasErrors}" Value="True">
              <Setter Property="Visibility" Value="Visible" TargetName="PART_ErrorIcon" />
            </DataTrigger>
            <DataTrigger Binding="{Binding IsFavourite}" Value="True">
              <Setter Property="Visibility" Value="Visible" TargetName="PART_FavouriteIcon" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Rating, TargetNullValue=0}" Value="0">
              <Setter Property="Visibility" Value="Collapsed" TargetName="PART_RatingIcon" />
            </DataTrigger>
            <Trigger Value="True" SourceName="PART_Panel" Property="c:AcListPage.NarrowList">
              <Setter Property="Visibility" Value="Collapsed" TargetName="PART_FavouriteIcon" />
              <Setter Property="Visibility" Value="Collapsed" TargetName="PART_RatingIcon" />
            </Trigger>
            <DataTrigger Binding="{Binding IsNew}" Value="True">
              <Setter Property="Visibility" Value="Visible" TargetName="PART_NewIcon" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Changed}" Value="True">
              <Setter Property="FontStyle" Value="Italic" TargetName="PART_DisplayNameText" />
            </DataTrigger>
          </DataTemplate.Triggers>
        </DataTemplate>

        <!-- TrackObject -->
        <DataTemplate DataType="{x:Type t:TrackObject}">
          <mui:Cell x:Name="PART_Panel" mui:Draggable.Enabled="True" Background="Black" ClipToBounds="True" c:ToolTips.GenericObject="{Binding}"
              c:ContextMenus.GenericObject="{Binding}">
            <mui:Cell>
              <mui:BetterImage Filename="{Binding PreviewImage}" MaxWidth="320" Stretch="UniformToFill" Margin="-8 -10 -8 0" ClearOnChange="True" />
              <mui:BetterImage Filename="{Binding OutlineImage}" Margin="0 0 0 10" ClearOnChange="True" />
            </mui:Cell>
            <DockPanel Background="{DynamicResource DarkStripeBackground}" VerticalAlignment="Bottom">
              <c:CountryIcon Country="{Binding Country}" Width="18" Height="12" DockPanel.Dock="Left" RenderOptions.BitmapScalingMode="HighQuality"
                  Margin="2 0 4 0" VerticalAlignment="Center" Stretch="Uniform" />
              <mui:BbCodeBlock x:Name="PART_DisplayNameText" Margin="0 1 0 3" Text="{Binding DisplayName}" Mode="NothingButEmoji"
                  Foreground="{DynamicResource DarkStripeText}" TextTrimming="CharacterEllipsis" Style="{StaticResource Small}" FontWeight="Normal" />
            </DockPanel>
            <c:OriginIcon Author="{Binding Author}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="4"
                TextBlock.Foreground="{DynamicResource DarkStripeText}" />
            <DockPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 4 0 0">
              <Path Data="{StaticResource AlertIconData}" Width="16" Height="16" DockPanel.Dock="Right" Fill="{DynamicResource Error}" Stretch="Uniform"
                  Visibility="Collapsed" x:Name="PART_ErrorIcon" Margin="0 0 4 0" />
              <Ellipse Width="4" Height="4" VerticalAlignment="Center" HorizontalAlignment="Right" Fill="{DynamicResource Go}" Margin="0 0 4 0"
                  IsHitTestVisible="False" x:Name="PART_NewIcon" DockPanel.Dock="Right" Visibility="Collapsed" />
              <Path Data="{StaticResource BookmarkIconData}" Width="12" Height="12" DockPanel.Dock="Right" Fill="{DynamicResource FavouriteBrush}"
                  Stretch="Uniform" Visibility="Collapsed" x:Name="PART_FavouriteIcon" VerticalAlignment="Center" Margin="0 0 4 0" />
              <c:RatingBar DockPanel.Dock="Right" Rating="{Binding Rating}" x:Name="PART_RatingIcon" VerticalAlignment="Center" Margin="0 0 4 0"
                  Style="{StaticResource CompactRatingBar.ReadOnly}" />
            </DockPanel>
          </mui:Cell>
          <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding Enabled}" Value="False">
              <Setter Property="Foreground" Value="{DynamicResource WindowTextReadOnly}" TargetName="PART_DisplayNameText" />
            </DataTrigger>
            <DataTrigger Binding="{Binding HasErrors}" Value="True">
              <Setter Property="Visibility" Value="Visible" TargetName="PART_ErrorIcon" />
            </DataTrigger>
            <DataTrigger Binding="{Binding IsFavourite}" Value="True">
              <Setter Property="Visibility" Value="Visible" TargetName="PART_FavouriteIcon" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Rating, TargetNullValue=0}" Value="0">
              <Setter Property="Visibility" Value="Collapsed" TargetName="PART_RatingIcon" />
            </DataTrigger>
            <Trigger Value="True" SourceName="PART_Panel" Property="c:AcListPage.NarrowList">
              <Setter Property="Visibility" Value="Collapsed" TargetName="PART_FavouriteIcon" />
              <Setter Property="Visibility" Value="Collapsed" TargetName="PART_RatingIcon" />
            </Trigger>
            <DataTrigger Binding="{Binding IsNew}" Value="True">
              <Setter Property="Visibility" Value="Visible" TargetName="PART_NewIcon" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Changed}" Value="True">
              <Setter Property="FontStyle" Value="Italic" TargetName="PART_DisplayNameText" />
            </DataTrigger>
          </DataTemplate.Triggers>
        </DataTemplate>

        <!-- CarObject -->
        <DataTemplate DataType="{x:Type t:CarObject}">
          <mui:Cell x:Name="PART_Panel" mui:Draggable.Enabled="True" Background="Black" ClipToBounds="True" c:ToolTips.GenericObject="{Binding}"
              c:ContextMenus.GenericObject="{Binding}">
            <mui:BetterImage Filename="{Binding SelectedSkin.PreviewImage}" AsyncDecode="True" ClearOnChange="True" DecodeWidth="320" Stretch="UniformToFill"
                Margin="-8 -10 -8 0" />
            <DockPanel Background="{DynamicResource DarkStripeBackground}" VerticalAlignment="Bottom">
              <c:CarIcon Width="12" Height="12" DockPanel.Dock="Left" Margin="2 0 4 0" VerticalAlignment="Center" Car="{Binding}" ClearOnChange="True" />
              <mui:BbCodeBlock x:Name="PART_DisplayNameText" Margin="0 1 0 3" Text="{Binding ShortName}" TextAlignment="Left" Mode="NothingButEmoji"
                  Foreground="{DynamicResource DarkStripeText}" TextTrimming="CharacterEllipsis" Style="{StaticResource Small}" FontWeight="Normal"
                  TextWrapping="NoWrap" />
            </DockPanel>
            <c:OriginIcon Author="{Binding Author}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="4"
                TextBlock.Foreground="{DynamicResource DarkStripeText}" />
            <DockPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 4 0 0">
              <Path Data="{StaticResource AlertIconData}" Width="16" Height="16" DockPanel.Dock="Right" Fill="{DynamicResource Error}" Stretch="Uniform"
                  Visibility="Collapsed" x:Name="PART_ErrorIcon" Margin="0 0 4 0" />
              <Ellipse Width="4" Height="4" VerticalAlignment="Center" HorizontalAlignment="Right" Fill="{DynamicResource Go}" Margin="0 0 4 0"
                  IsHitTestVisible="False" x:Name="PART_NewIcon" DockPanel.Dock="Right" Visibility="Collapsed" />
              <Path Data="{StaticResource BookmarkIconData}" Width="12" Height="12" DockPanel.Dock="Right" Fill="{DynamicResource FavouriteBrush}"
                  Stretch="Uniform" Visibility="Collapsed" x:Name="PART_FavouriteIcon" VerticalAlignment="Center" Margin="0 0 4 0" />
              <c:RatingBar DockPanel.Dock="Right" Rating="{Binding Rating}" x:Name="PART_RatingIcon" VerticalAlignment="Center" Margin="0 0 4 0"
                  Style="{StaticResource CompactRatingBar.ReadOnly}" />
            </DockPanel>
          </mui:Cell>
          <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding Enabled}" Value="False">
              <Setter Property="Foreground" Value="{DynamicResource WindowTextReadOnly}" TargetName="PART_DisplayNameText" />
            </DataTrigger>
            <DataTrigger Binding="{Binding HasErrors}" Value="True">
              <Setter Property="Visibility" Value="Visible" TargetName="PART_ErrorIcon" />
            </DataTrigger>
            <DataTrigger Binding="{Binding IsFavourite}" Value="True">
              <Setter Property="Visibility" Value="Visible" TargetName="PART_FavouriteIcon" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Rating, TargetNullValue=0}" Value="0">
              <Setter Property="Visibility" Value="Collapsed" TargetName="PART_RatingIcon" />
            </DataTrigger>
            <Trigger Value="True" SourceName="PART_Panel" Property="c:AcListPage.NarrowList">
              <Setter Property="Visibility" Value="Collapsed" TargetName="PART_FavouriteIcon" />
              <Setter Property="Visibility" Value="Collapsed" TargetName="PART_RatingIcon" />
            </Trigger>
            <DataTrigger Binding="{Binding IsNew}" Value="True">
              <Setter Property="Visibility" Value="Visible" TargetName="PART_NewIcon" />
            </DataTrigger>

            <DataTrigger Binding="{Binding Changed}" Value="True">
              <Setter Property="FontStyle" Value="Italic" TargetName="PART_DisplayNameText" />
            </DataTrigger>
          </DataTemplate.Triggers>
        </DataTemplate>

      </ContentControl.Resources>
    </ContentControl>
  </DataTemplate>

  <DataTemplate x:Key="CarSkinItemTemplate" DataType="{x:Type t:CarSkinObject}">
    <mui:BetterImage c:ToolTips.CarSkin="{Binding}" Width="32" Height="32" Filename="{Binding LiveryImage}" ClearOnChange="True" />
  </DataTemplate>

  <DataTemplate x:Key="AcItemWrapperSpecific.CarSkinItemTemplate" DataType="{x:Type t:AcItemWrapper}">
    <ContentControl Content="{Binding Value}" Width="32" Height="32" Background="Transparent">
      <ContentControl.Resources>
        <!-- Placeholder -->
        <DataTemplate DataType="{x:Type t:AcPlaceholderNew}">
          <TextBlock Text="{Binding Id}" Style="{StaticResource Label}" />
        </DataTemplate>

        <!-- AccommonObject -->
        <DataTemplate DataType="{x:Type t:CarSkinObject}">
          <mui:BetterImage ToolTip="{Binding DisplayName}" Filename="{Binding LiveryImage}" Width="32" Height="32" ClearOnChange="True" />
        </DataTemplate>
      </ContentControl.Resources>
    </ContentControl>
  </DataTemplate>

  <ToolTip x:Key="ShowroomPreviewToolTip">
    <mui:BetterImage Width="256" Height="144" Margin="4" Filename="{Binding PreviewImage}" />
  </ToolTip>

  <ToolTip x:Key="WeatherPreviewToolTip" Visibility="{Binding PreviewImage, Converter={StaticResource ExistToVisibilityConverter}}">
    <mui:BetterImage Width="256" Height="144" Margin="4" Filename="{Binding PreviewImage}" HideBroken="True" />
  </ToolTip>

  <Style x:Key="CarBlockButton" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Width" Value="64" />
    <Setter Property="Height" Value="64" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="Background" Value="Transparent" />
  </Style>
</ResourceDictionary>