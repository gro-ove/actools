  <!-- For quick drive page, for those overlaying buttons -->
  <SolidColorBrush x:Key="OverlayForeground" Color="#FFFFFF" />
  <SolidColorBrush x:Key="OverlayBackground" Color="#33000000" />
  <DropShadowEffect x:Key="OverlayEffect" Opacity="1" BlurRadius="4" ShadowDepth="0" />

  <!-- Used in stats, in tools page, in lap times sources page -->
  <SolidColorBrush x:Key="CardBackground" Color="#AA000000" />
  <SolidColorBrush x:Key="CardBorder" Color="#AA000000" />
  <SolidColorBrush x:Key="CardHeaderBackground" Color="#99000000" />
  <SolidColorBrush x:Key="CardHeaderText" Color="#FFFFFF" />
