  <Color x:Key="ErrorColor">#FF8C00</Color>
  <Color x:Key="GoColor">#00FF00</Color>

  <!-- Curves -->
  <Color x:Key="CarPowerColor">#FF0000</Color>
  <Color x:Key="CarTorqueColor">#FFFF00</Color>

	<!-- Favourites, rating -->
	<SolidColorBrush x:Key="FavouriteBrush" Color="#FF4500" />
	<SolidColorBrush x:Key="RatingBrush" Color="#FFFF00" />
	<SolidColorBrush x:Key="RatingCompactBackground" Color="#333333" />

	<!-- Places -->
