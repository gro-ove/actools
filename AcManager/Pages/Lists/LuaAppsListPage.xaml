<c:AcListPage x:Class="AcManager.Pages.Lists.LuaAppsListPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:li="clr-namespace:AcManager.Pages.Lists" xmlns:c="http://acstuff.ru/app/controls"
    xmlns:mui="http://firstfloorsoftware.com/ModernUI" mc:Ignorable="d" Loaded="OnLoaded" Unloaded="OnUnloaded" Margin="{StaticResource ContentMargin}"
    d:DataContext="{d:DesignInstance li:LuaAppsListPage+ViewModel}" ItemsSource="{Binding MainList}" SaveScrollKey="LuaAppsListPage.Scroll">
  <c:AcListPage.Resources>
    <DataTemplate x:Key="Batch.PackLuaApps" DataType="{x:Type li:LuaAppsListPage+BatchAction_PackApps}">
      <DataTemplate.Resources>
        <mui:SharedResourceDictionary Source="/AcManager.Controls;component/Themes/AcListPage.BatchStyle.xaml" />
      </DataTemplate.Resources>
      <mui:SpacingStackPanel Spacing="4">
        <mui:SpacingUniformGrid Columns="2" VerticalSpacing="4" HorizontalSpacing="20" HorizontalAlignment="Left">
          <CheckBox IsChecked="{Binding PackSeparately}">
            <Label Content="Pack separately" />
          </CheckBox>
        </mui:SpacingUniformGrid>
      </mui:SpacingStackPanel>
    </DataTemplate>
  </c:AcListPage.Resources>
</c:AcListPage>